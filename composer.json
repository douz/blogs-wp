{
  "name": "douz/wp",
  "description": "Douz - Personal Blog",
  "authors": [
    {
      "name": "Douglas Barahona",
      "email": "douglas.barahona@me.com"
    }
  ],
  "repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "platform": {
      "php": "8.2"
    }
  },
  "require": {
    "wpackagist-theme/raft":"1.1.6",
		"wpackagist-plugin/stream": "4.0.2",
    "wpackagist-plugin/redis-cache": "2.5.3",
    "wpackagist-plugin/wordpress-importer": "0.8.2",
    "wpackagist-plugin/code-syntax-block": "3.2.1",
    "wpackagist-plugin/wpforms-lite":"1.9.1.3",
    "wpackagist-plugin/wp-mail-smtp":"4.1.1",
    "wpackagist-plugin/google-site-kit":"1.137.0"
	},
  "extra": {
		"installer-paths": {
			"themes/{$name}": [
				"type:wordpress-theme"
			],
			"plugins/{$name}": [
				"type:wordpress-plugin"
			],
			"mu-plugins/{$name}": [
				"type:wordpress-muplugin"
			]
		}
	},
  "scripts": {
		"post-autoload-dump": [
			"cp ./plugins/redis-cache/includes/object-cache.php ./object-cache.php"
		]
	}
}
